doctype
html(ng-app='towerApp')
  block vars
  head
    title #{title}
    link(rel="stylesheet", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    link(rel="stylesheet", href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800')
    link(rel="stylesheet", href='stylesheets/default.css')
    link(rel="stylesheet", href='stylesheets/forms.css')
    link(rel="stylesheet", href='stylesheets/fonts.css')
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-57604515-1', 'auto');
      ga('send', 'pageview');
    
  body(ng-controller='towerController')
    a(href="https://github.com/belteshazzar543/TowerTheAscent")
      img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png")
    #header-wrapper
      #header.container
        #logo
          table(style="width:60%")
            tr
              td 
                img(src="../images/logo-small.png", alt="Tower: The Ascent Logo")
              td 
                h1
                  a(href="/") Tower: The Ascent
        #menu
          ul
            //li.current_page_item
            li
              a(href="/", accesskey="1", title="") Home
            li
              a(href="/play", accesskey="2", title="") Play
            li
              a(href="/updates", accesskey="3", title="") Updates
            li
              a(href="/about", accesskey="4", title="") About
            li
              a(href="/contact", accesskey="5", title="") Contact Us
    p &#160;
    unless pageTitle != "homePage"
      #featured &#160;
    #wrapper
      #page.container
        #content
          block content
        #sidebar(align="right")
          block sidebar
    #footer
      #copyright.container
        p 
          | &#169; 2014 Ethereal Games. Running on node, express and jade. Visit the 
          a(href='https://github.com/belteshazzar543/TowerTheAscent/wiki') Wiki

    // Scripts at bottom for faster loading    
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js')
    script(type="text/javascript", src="main/blog.js")

    if pageTitle == "gamePage"
      script(type="text/javascript", src="main/phaser.min.js")
      script(type="text/javascript", src="main/main.js")
      script(type="text/javascript", src="main/initGame.js")
